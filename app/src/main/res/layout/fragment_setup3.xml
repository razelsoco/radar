<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_background" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingLeft="32dp" android:paddingRight="32dp"
        android:paddingTop="32dp"
        android:orientation="vertical">

        <TextView android:text="Just a gentle reminder:"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/title_size"
            android:textColor="@color/white"/>

        <TextView android:text="Try to keep device turned on and connected via WiFi at all times."
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:typeface="normal"
            android:paddingTop="16dp"
            android:textSize="@dimen/normal_size"
            android:textColor="@color/white"/>

        <TextView android:text="Leave a note if device is faulty or requires a software update."
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:typeface="normal"
            android:paddingTop="16dp"
            android:textSize="@dimen/normal_size"
            android:textColor="@color/white"/>

        <TextView android:text="Take good care of your new friend"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:typeface="normal"
            android:paddingTop="16dp"
            android:textSize="@dimen/normal_size"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Button android:id="@+id/bt_start"
        android:text="Start searching"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:typeface="normal"
        android:textSize="@dimen/normal_size"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:layout_above="@+id/bottom_panel"
        android:layout_marginBottom="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerHorizontal="true"/>

    <include android:id="@+id/bottom_panel" layout="@layout/panel_back_next" />

</RelativeLayout>
